{
  "compilerOptions": {
    "rootDir": ".",
    "pretty": true, // Stylizes errors and messages using color and context.
    "lib": ["ESNext"], // Specify a set of bundled library declaration files that describe the target runtime environment.
    "target": "ESNext", // Specify the JavaScript language version for emitted JavaScript and include compatible library declarations.
    "module": "NodeNext",// Specify what module code is generated.
    "moduleResolution": "NodeNext", //Specify how TypeScript looks up a file from a given module specifier.
    "declaration": true,  // Generates a d.ts file for every TS or JS file inside the project.
    "declarationMap": true, // Generates a source map for d.ts files which map back to the original .ts source file.
    "sourceMap": true, // Enables generation of sourcemap files which allow powerful debugging enhancements.
    "composite": true, // Enforces constraints which allow build tools to determine if a project has been built yet. (Used for project references)
    "emitDeclarationOnly": false, // When true only emits .d.ts files; does not emit .js files.
    "strict": true, // Enables a wide range of typechecking behavior.
    "strictBindCallApply": true, // Makes TypeScript check that the built-in methods of a functions call, bind, and apply are invoked with the correct argument for the underlying function.
    "useUnknownInCatchVariables": true, // Changes the variable type in a catch clause from any to unknown. (Enforces more comprehensive error handling)
    "noImplicitOverride": true, // Ensures sub-classes never go out of sync by ensuring functions which override include the 'override' keyword.
    "skipLibCheck": false, // Ensures TypeScript type checks declaration files (d.ts).
    "alwaysStrict": true, // Ensures that files are parsed in the ECMAScript strict mode.
    "preserveConstEnums": false, // By setting this to false TypeScript will inline all constants and remove their references.
    "newLine": "lf", // Specifies the end of line sequence to be used when emitting files.
    "noImplicitReturns": true, // Ensures all code paths in a function return a value.
    "forceConsistentCasingInFileNames": true, // Disallows inconsistently-cased references to the same file.
    "resolveJsonModule": true, // Allows import of .json files as modules.
    "esModuleInterop":true, // Emit additional JavaScript to ease support for importing CommonJS modules. 
    "types": [], // Defines what visible @types from installed packages are used in compilation. 
  }
}